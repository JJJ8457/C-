#include <stdio.h>
#include <string.h>
// 전역 변수 선언
int totalsold = 0;   // 총 판매량
int totalin = 0;     // 총 입고량
int max = 0;         // 가장 많이 판매된 상품의 수량
int min = 99999;     // 가장 적게 판매된 상품의 수량
char enterID = ' ';    //상품 ID입력


struct item{           //구조체 선언
    int ID[5];         //입고 수량
    char name[5][100]; //상품명 입력, 5개의 이름, 각각 100글자까지
    int enter;         //입고수량 입력
    int price;         //판매가격 입력
} ITEM;

void itemstore() {     // 입고 함수
    scanf("상품 ID: %c", &enterID);
    for (int i=0; i < 5; i++){
        if(enterID != ITEM ID[i]);
    }

    // 상품 입고 수량 입력
    for (int i = 0; i < 5; i++) {
        int quantity;
        printf("%d번 상품의 입고 수량: ", i + 1);
        scanf("%d", &quantity);
        ID[i] += quantity; // 재고에 입고량 추가
        totalin += quantity;
    }
    return 0;
}

//void itemsold(){}  // 판매 함수


//void singelitem(){} //개별 현황

//void allitem(){}    // 전체상품 현황 함수


int main() {
    int menu = 0;

    while (1) {
        printf("\n[쇼핑몰 관리 프로그램]\n");
        printf("원하는 메뉴를 선택하세요: 1.입고, 2.판매, 3.개별현황, 4.전체현황, 5.종료\n");
        scanf("%d", &menu);

        if (menu == 1) itemstore();
        //else if (menu == 2) itemsold();
        //else if (menu == 3) singelitem();
        //else if (menu == 4) allitem();
        else if (menu == 5) break;
        else printf("잘못된 메뉴 선택입니다. 다시 시도하세요.\n");
    }

    return 0;
}
